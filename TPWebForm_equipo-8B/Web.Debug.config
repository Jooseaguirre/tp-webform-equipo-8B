<?xml version="1.0"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

	<!-- Cambiamos la cadena de conexiÃ³n para debug -->
	<connectionStrings>
		<add name="MiConexion"
			 connectionString="Data Source=localhost;Initial Catalog=MiDB;Integrated Security=True"
			 xdt:Transform="SetAttributes"
			 xdt:Locator="Match(name)"/>
